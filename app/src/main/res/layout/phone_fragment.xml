<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:padding="10dp">
    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">
            <LinearLayout
                android:layout_width="match_parent"
                android:orientation="vertical"
                android:layout_height="wrap_content">
                <TextView
                    android:text="@string/select_phone"
                    android:textColor="@color/black"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"/>
                <RadioGroup
                    android:id="@+id/select_phone"
                    android:background="@color/white"
                    android:paddingTop="10dp"
                    android:paddingBottom="5dp"
                    android:layout_width="match_parent"
                    android:orientation="horizontal"
                    android:layout_height="wrap_content">

                    <RadioButton
                        android:id="@+id/kunpeng_phone"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:button="@null"
                        android:drawableTop="@drawable/kunpeng_phone"
                        android:gravity="center"
                        android:text="@string/kunpeng_phone"
                        android:textSize="12sp" />

                    <RadioButton
                        android:id="@+id/redfigure_phone"
                        android:drawableTop="@drawable/redfingure"
                        android:layout_width="0dp"
                        android:text="@string/redfingure_phone"
                        android:button="@null"
                        android:textSize="12sp"
                        android:layout_weight="1"
                        android:gravity="center"
                        android:layout_height="wrap_content"/>
                    <RadioButton
                        android:id="@+id/yidong_phone"
                        android:drawableTop="@drawable/yidong_phone"
                        android:layout_width="0dp"
                        android:text="@string/yidongphone"
                        android:button="@null"
                        android:textSize="12sp"
                        android:layout_weight="1"
                        android:gravity="center"
                        android:layout_height="wrap_content"/>
                    <RadioButton
                        android:id="@+id/wangyiyun_phone"
                        android:textSize="12sp"
                        android:drawableTop="@drawable/wangyi_phone"
                        android:layout_width="0dp"
                        android:text="@string/wangyiyunphone"
                        android:button="@null"
                        android:layout_weight="1"
                        android:gravity="center"
                        android:layout_height="wrap_content"/>
                </RadioGroup>
            </LinearLayout>
            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content">
                <TextView
                    android:textColor="@color/black"
                    android:layout_marginTop="10dp"
                    android:textSize="16sp"
                    android:layout_marginStart="5dp"
                    android:text="@string/base_xinneng"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"/>

                <CheckBox
                    android:id="@+id/phone_select_all"
                    android:layout_alignParentEnd="true"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:checked="true"
                    android:paddingEnd="10dp"
                    android:text="@string/quanxuan"/>
            </RelativeLayout>

            <LinearLayout
                android:paddingBottom="5dp"
                android:paddingTop="5dp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                >
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal">
                    <Button
                        android:id="@+id/bule_liuchangxing"
                        android:drawableTop="@drawable/blue_liuchang"
                        android:text="@string/liuchangxing"
                        android:textColor="@color/black"
                        android:gravity="center"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:background="@null"
                        />

                    <Button
                        android:id="@+id/bule_wendinxing"
                        android:drawableTop="@drawable/blue_wending"
                        android:text="@string/wendingxing"
                        android:textColor="@color/black"
                        android:gravity="center"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:background="@null"
                        />
                    <Button
                        android:id="@+id/bule_chukong"
                        android:drawableTop="@drawable/blue_chukong"
                        android:text="@string/chukongtiyan"
                        android:textColor="@color/black"
                        android:gravity="center"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:background="@null"
                        />
                    <Button
                        android:id="@+id/bule_yinhua"
                        android:drawableTop="@drawable/blue_yinhua"
                        android:text="@string/yinhuazhiliang"
                        android:textColor="@color/black"
                        android:gravity="center"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:background="@null"
                        />
                </LinearLayout>
                <LinearLayout
                    android:layout_width="match_parent"
                    android:orientation="horizontal"
                    android:layout_height="wrap_content">
                    <LinearLayout
                        android:layout_width="0dp"
                        android:layout_weight="1"
                        android:layout_height="match_parent"
                        android:gravity="center">
                        <CheckBox
                            android:checked="true"
                            android:clickable="false"
                            android:id="@+id/blue_liuchang_cheak"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"/>
                    </LinearLayout>
                    <LinearLayout
                        android:layout_width="0dp"
                        android:layout_weight="1"
                        android:gravity="center"
                        android:layout_height="match_parent">
                        <CheckBox
                            android:id="@+id/blue_wending_cheak"
                            android:checked="true"
                            android:clickable="false"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"/>
                    </LinearLayout>
                    <LinearLayout
                        android:layout_width="0dp"
                        android:layout_weight="1"
                        android:gravity="center"
                        android:layout_height="match_parent">
                        <CheckBox
                            android:id="@+id/blue_chukong_cheak"
                            android:checked="true"
                            android:clickable="false"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"/>
                    </LinearLayout>
                    <LinearLayout
                        android:layout_width="0dp"
                        android:gravity="center"
                        android:layout_weight="1"
                        android:layout_height="match_parent">
                        <CheckBox
                            android:id="@+id/blue_yinhua_cheak"
                            android:checked="true"
                            android:clickable="false"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"/>
                    </LinearLayout>

                </LinearLayout>
            </LinearLayout>

            <TextView
                android:textSize="16sp"
                android:textColor="@color/black"
                android:layout_marginStart="10dp"
                android:text="@string/base_guige"
                android:layout_marginTop="5dp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"/>
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:paddingTop="10dp"
                android:orientation="vertical"
                android:paddingBottom="10dp"
                >
                <LinearLayout
                    android:layout_width="match_parent"
                    android:orientation="horizontal"
                    android:layout_height="wrap_content">

                    <Button
                        android:id="@+id/bule_cpu"
                        android:drawableTop="@drawable/blue_cpu"
                        android:text="@string/cpu"
                        android:textColor="@color/black"
                        android:gravity="center"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:background="@null"
                        />

                    <Button
                        android:id="@+id/bule_gpu"
                        android:drawableTop="@drawable/blue_gpu"
                        android:text="@string/gpu"
                        android:textColor="@color/black"
                        android:gravity="center"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:background="@null"
                        />
                    <Button
                        android:id="@+id/bule_ram"
                        android:drawableTop="@drawable/blue_ram"
                        android:text="@string/ram"
                        android:textColor="@color/black"
                        android:gravity="center"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:background="@null"
                        />
                    <Button
                        android:id="@+id/bule_rom"
                        android:drawableTop="@drawable/blue_rom"
                        android:text="@string/rom"
                        android:textColor="@color/black"
                        android:gravity="center"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:background="@null"
                        />
                </LinearLayout>
                <LinearLayout
                    android:layout_width="match_parent"
                    android:orientation="horizontal"
                    android:layout_height="wrap_content">
                    <LinearLayout
                        android:layout_width="0dp"
                        android:layout_weight="1"
                        android:layout_height="match_parent"
                        android:gravity="center">
                        <CheckBox
                            android:clickable="false"
                            android:checked="true"
                            android:id="@+id/blue_cpu_cheak"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"/>
                    </LinearLayout>
                    <LinearLayout
                        android:layout_width="0dp"
                        android:layout_weight="1"
                        android:gravity="center"
                        android:layout_height="match_parent">
                        <CheckBox
                            android:id="@+id/blue_gpu_cheak"
                            android:checked="true"
                            android:clickable="false"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"/>
                    </LinearLayout>
                    <LinearLayout
                        android:layout_width="0dp"
                        android:layout_weight="1"
                        android:gravity="center"
                        android:layout_height="match_parent">
                        <CheckBox
                            android:id="@+id/blue_ram_cheak"
                            android:checked="true"
                            android:clickable="false"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"/>
                    </LinearLayout>
                    <LinearLayout
                        android:layout_width="0dp"
                        android:gravity="center"
                        android:layout_weight="1"
                        android:layout_height="match_parent">
                        <CheckBox
                            android:id="@+id/blue_rom_cheak"
                            android:checked="true"
                            android:clickable="false"

                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"/>
                    </LinearLayout>

                </LinearLayout>

            </LinearLayout>

        </LinearLayout>
    </ScrollView>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:padding="5dp"
        android:layout_marginBottom="5dp"
        android:layout_alignParentBottom="true"
        android:layout_marginTop="40dp"
        >
        <Button
            android:id="@+id/blue_start_test"
            android:layout_marginLeft="15dp"
            android:layout_marginRight="15dp"
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:background="@drawable/button_bac"
            android:text="@string/starttest"
            android:textSize="18sp"
            android:textStyle="bold"
            />

    </LinearLayout>

</RelativeLayout>