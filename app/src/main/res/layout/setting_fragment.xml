<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:orientation="vertical"
    android:paddingTop="40dp"
    android:padding="5dp"
    android:layout_height="wrap_content">
    <RelativeLayout
        android:id="@+id/set_shiyongshuom"
        android:padding="10dp"
        android:background="@color/white"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentStart="true"
            android:layout_centerVertical="true"
            android:text="@string/shiyongshuoming"
            android:textColor="@color/black"
            android:textSize="16sp" />
        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@drawable/jiantoujinru"
            android:layout_centerVertical="true"
            android:background="@null"
            android:layout_alignParentEnd="true"/>

    </RelativeLayout>
    <LinearLayout
        android:paddingStart="20dp"
        android:paddingEnd="20dp"
        android:layout_width="match_parent"
        android:layout_height="0.3dp"
        android:background="@color/black"
        />
    <RelativeLayout
        android:id="@+id/set_yinsizhengce"
        android:padding="10dp"
        android:background="@color/white"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/yinsizhengce"
            android:textSize="16sp"
            android:textColor="@color/black"
            android:layout_alignParentLeft="true"
            android:layout_centerVertical="true"
            />
        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@drawable/jiantoujinru"
            android:layout_centerVertical="true"
            android:background="@null"
            android:layout_alignParentRight="true"/>
    </RelativeLayout>
    <LinearLayout

        android:paddingStart="20dp"
        android:paddingEnd="20dp"
        android:layout_width="match_parent"
        android:layout_height="0.3dp"
        android:background="@color/black"
        />
    <RelativeLayout
        android:id="@+id/set_yonghuxieyi"
        android:padding="10dp"
        android:background="@color/white"

        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/yonghuxieyi"
            android:textSize="16sp"
            android:textColor="@color/black"
            android:layout_alignParentLeft="true"
            android:layout_centerVertical="true"
            />
        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@drawable/jiantoujinru"
            android:layout_centerVertical="true"
            android:background="@null"
            android:layout_alignParentRight="true"/>
    </RelativeLayout>
    <LinearLayout

        android:paddingStart="20dp"
        android:paddingEnd="20dp"
        android:layout_width="match_parent"
        android:layout_height="0.3dp"
        android:background="@color/black"
        />
    <RelativeLayout
        android:id="@+id/set_yijianfankui"
        android:padding="10dp"
        android:background="@color/white"

        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/yijianfankui"
            android:textSize="16sp"
            android:textColor="@color/black"
            android:layout_alignParentLeft="true"
            android:layout_centerVertical="true"
            />
        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@drawable/jiantoujinru"
            android:layout_centerVertical="true"
            android:background="@null"
            android:layout_alignParentRight="true"/>
    </RelativeLayout>
    <LinearLayout

        android:paddingStart="20dp"
        android:paddingEnd="20dp"
        android:layout_width="match_parent"
        android:layout_height="0.3dp"
        android:background="@color/black"
        />
</LinearLayout>