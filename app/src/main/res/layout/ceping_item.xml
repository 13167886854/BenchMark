<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:padding="20dp"
    android:orientation="vertical"
    android:layout_height="wrap_content">
    <RelativeLayout
        android:id="@+id/ceping_lay"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <ImageView
            android:id="@+id/ceping_image"
            android:src="@drawable/blue_liuchang"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"/>

        <TextView
            android:id="@+id/ceping_item"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:layout_toEndOf="@id/ceping_image"
            android:paddingStart="30dp"
            android:text="@string/liuchangxing"
            android:textColor="@color/black"
            android:textSize="18sp" />

        <TextView
            android:id="@+id/ceping_grade"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"
            android:text="@string/cepingfenshu"
            android:textColor="#356EDC"
            android:textSize="18sp"
            android:textStyle="bold" />

    </RelativeLayout>
    <TextView
        android:id="@+id/ceping_text"
        android:layout_width="match_parent"
        android:text="@string/xiangxixinxi"
        android:layout_marginTop="15dp"
        android:textColor="@color/black"
        android:textSize="15sp"
        android:layout_height="wrap_content"/>
</LinearLayout>